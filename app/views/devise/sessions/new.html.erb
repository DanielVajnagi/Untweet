<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="flex justify-center mb-6">
    <%= image_tag "logo.png", alt: "Logo" %>
  </div>

  <% if flash[:alert] || flash[:notice] || resource.errors.present? %>
    <div class="mb-4">
      <% if flash[:alert] %>
        <div class="bg-red-50 border-l-4 border-red-600 text-red-800 p-4 rounded shadow-sm" style="background-color: #fee2e2; border-color: #dc2626; color: #991b1b;">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if resource.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-600 text-red-800 p-4 rounded shadow-sm" style="background-color: #fee2e2; border-color: #dc2626; color: #991b1b;">
          <% resource.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="devise-field">
    <%= f.label :login, t('email'), class: "devise-label" %>
    <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :password, t('password'), class: "devise-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "devise-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="devise-field flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, t('remember_me'), class: "text-gray-700" %>
    </div>
  <% end %>

  <div class="devise-submit-box">
    <%= f.submit t('login'), class: "devise-submit" %>
  </div>

  <div class="text-center">
    <p class="devise-text"><%= t('devise.shared.dont_have_account') %></p>
    <%= link_to t('signup'), new_registration_path(resource_name), class: "devise-link" %>
  </div>
<% end %>
