
<div class="devise-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f| %>
  <h2 class="text-2xl font-bold mb-6">Edit <%= resource_name.to_s.humanize %> </h2>
  <%= render "devise/shared/error_messages", resource: resource, class: "devise-error" %>

  <div class="absolute top-0 right-0 mt-4 mr-4">
      <%= link_to "Back", :back, class: "devise-link bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="devise-field">


    <%= f.label :username, class: "devise-label" %>
    <%= f.text_field :username, value: resource.username, class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :email, class: "devise-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="devise-text">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="devise-field">
    <%= f.label :password, class: "devise-label" %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
    <% if @minimum_password_length %>
      <em class="devise-text"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="devise-field">
    <%= f.label :password_confirmation, class: "devise-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :current_password, class: "devise-label" %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "devise-input" %>
  </div>

  <div class="devise-submit-box">
    <%= f.submit "Update", class: "devise-submit" %>
  </div>

 
  

<% end %>
 <div class="devise-text"> <%= button_to "Delete my account", registration_path(resource_name), data: {  confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "devise-danger" %></div>


</div>