<div class="devise-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f| %>
    <h2 class="devise-header"><%= t('devise.registrations.edit.title', resource: resource_name.to_s.humanize) %></h2>
    <%= render "devise/shared/error_messages", resource: resource, class: "devise-error" %>

    <div class="devise-field">
      <%= f.label :username, t('username'), class: "devise-label" %>
      <%= f.text_field :username, value: resource.username, class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :email, t('email'), class: "devise-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="devise-text">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="devise-field">
      <%= f.label :password, t('password'), class: "devise-label" %> <i>(<%= t('devise.registrations.edit.password_blank') %>)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
      <% if @minimum_password_length %>
        <em class="devise-text"><%= t('devise.registrations.edit.password_minimum', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="devise-field">
      <%= f.label :password_confirmation, t('confirm_password'), class: "devise-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :current_password, t('password'), class: "devise-label" %> <i>(<%= t('devise.registrations.edit.current_password') %>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "devise-input" %>
    </div>

    <div class="devise-submit-box">
      <%= f.submit t('devise.registrations.edit.update'), class: "devise-submit" %>
    </div>

  <% end %>
  <div class="devise-text">
    <%= button_to t('devise.registrations.edit.delete_account'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.delete_confirm'), turbo_confirm: t('devise.registrations.edit.delete_confirm') }, method: :delete, class: "devise-danger" %>
  </div>
</div>
