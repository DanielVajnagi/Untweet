<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="flex justify-center mb-6">
    <%= image_tag "logo.png", alt: "Logo" %>
  </div>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "devise-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow-md border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :username, class: "devise-label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "shadow-md border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "devise-label" %>
    <% if @minimum_password_length %>
      <em class="text-gray-500 text-sm"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "shadow-md border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "devise-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow-md border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>

  <div class="flex items-center justify-center mb-4">
    <%= f.submit "Sign up", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>

  <div class="text-center">
    <p class="text-gray-600">Already have an account?</p>
    <%= link_to "Log in", new_session_path(resource_name), class: "mt-2 inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

<% end %>
