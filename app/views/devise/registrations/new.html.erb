<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="flex justify-center mb-6">
    <%= image_tag "logo.png", alt: "Logo" %>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="devise-field">
    <%= f.label :email, t('email'), class: "devise-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :username, t('username'), class: "devise-label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :password, t('password'), class: "devise-label" %>
    <% if @minimum_password_length %>
      <em class="text-gray-500 text-sm"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :password_confirmation, t('confirm_password'), class: "devise-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
  </div>

  <div class="devise-submit-box">
    <%= f.submit t('signup'), class: "devise-submit" %>
  </div>

  <div class="text-center">
    <p class="devise-text"><%= t('devise.shared.already_have_account') %></p>
    <%= link_to t('login'), new_session_path(resource_name), class: "devise-link" %>
  </div>
<% end %>
