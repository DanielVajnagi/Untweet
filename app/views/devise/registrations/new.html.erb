<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="flex justify-center mb-6">
    <%= image_tag "logo.png", alt: "Logo" %>
  </div>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="devise-field">
    <%= f.label :email, class: "devise-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :username, class: "devise-label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :password, class: "devise-label" %>
    <% if @minimum_password_length %>
      <em class="text-gray-500 text-sm"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
  </div>

  <div class="devise-field">
    <%= f.label :password_confirmation, class: "devise-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
  </div>

  <div class="devise-submit-box">
    <%= f.submit "Sign up", class: "devise-submit" %>
  </div>

  <div class="text-center">
    <p class="devise-text">Already have an account?</p>
    <%= link_to "Log in", new_session_path(resource_name), class: "devise-link" %>
  </div>
<% end %>
