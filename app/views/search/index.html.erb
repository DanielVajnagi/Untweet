<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8"><%= t('search.results_title') %></h1>

    <%= form_with url: search_path, method: :get, class: "mb-8" do |f| %>
      <div class="flex gap-4">
        <%= f.text_field :q, value: @query, placeholder: t('search.placeholder'), class: "flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= f.submit t('search.button_text'), class: "px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <% if @query.present? %>
      <div class="space-y-8">
        <% if @users.any? %>
          <section>
            <h2 class="text-2xl font-semibold mb-4"><%= t('search.users_section_title') %></h2>
            <div class="space-y-4">
              <% @users.each do |user| %>
                <% next unless user.present? %>
                <%= link_to user_path(user.username) do %>
                  <div class="p-4 bg-white rounded-lg shadow list-none">
                    <h3 class="font-medium"><%= user.username %></h3>
                  </div>
                <% end %>
              <% end %>
            </div>
          </section>
        <% end %>

        <% if @tweets.any? %>
          <section>
            <h2 class="text-2xl font-semibold mb-4"><%= t('search.tweets_section_title') %></h2>
            <ul id="tweet_list" class="tweet-list">
              <% @tweets.each do |tweet| %>
                <%= render 'tweets/tweet', tweet: tweet %>
              <% end %>
            </ul>
          </section>
        <% end %>

        <% if !@users.any? && !@tweets.any? %>
          <p class="text-gray-600 text-center"><%= t('search.no_results', query: @query) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>